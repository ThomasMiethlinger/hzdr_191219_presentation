% Palettes
\setbeamercolor{palette primary}{fg=black, bg=white}
\setbeamercolor{palette secondary}{fg=black,bg=white}
\setbeamercolor{palette tertiary}{fg=black, bg=white}
\setbeamercolor{palette quaternary}{fg=black, bg=white}

% General
\if@greyText
\setbeamercolor{normal text}{fg=jkuDarkGrey}
\else
\setbeamercolor{normal text}{fg=black}
\setbeamercolor{subsection number projected}{bg=black}
\setbeamercolor{bibliography entry author}{fg=black}
\setbeamercolor{bibliography entry title}{fg=black}
\setbeamercolor{bibliography item}{fg=black}
\fi
\setbeamercolor{structure}{fg=jkuDarkGrey}
\setbeamercolor{alerted text}{fg=jkuPurple}
\setbeamercolor{section in toc}{parent=normal text}

% Titlepage
\setbeamercolor{title}{parent=palette primary}
\setbeamercolor{subtitle}{parent=palette secondary}
\setbeamercolor{institute}{parent=normal text}

% Content
\setbeamercolor{frametitle}{parent=palette primary}

% Blocks
\setbeamercolor{block title}{fg=white,bg=jkuDarkGrey}
\setbeamercolor{block body}{parent=normal text, bg=jkuGrey!20}
\setbeamercolor{block title example}{fg=black, bg=jkuDarkGrey!50}
\setbeamercolor{block body example}{parent=normal text, bg=jkuGrey!20}
\setbeamercolor{block title alerted}{fg=white, bg=jkuPurple}
\setbeamercolor{block body alerted}{fg=black, bg=jkuPurple!15}

% Page Number
\setbeamercolor{page number in head/foot}{fg=jkuDarkGrey}
\setbeamercolor{itemize item}{parent=normal text}
\setbeamercolor{itemize subitem}{parent=normal text}
\setbeamercolor{itemize subsubitem}{parent=normal text}
\setbeamercolor{enumerate item}{parent=normal text}
\setbeamercolor{enumerate subitem}{parent=normal text}
\setbeamercolor{enumerate subsubitem}{parent=normal text}
\setbeamercolor{description item}{parent=normal text}

\setbeamercolor{progressbar}{parent=palette quaternary}
\setbeamercolor{sectionpage sectiontitle}{parent=palette primary}
\setbeamercolor{sectionpage subsectiontitle}{parent=palette secondary}
\setbeamercolor{sectionpage subsubsectiontitle}{parent=palette tertiary}

\mode<all>
